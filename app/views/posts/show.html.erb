<div class="section">
  <div class="container is-centered">
    <div class="block">

      <div class="content is-medium">
        <div class="body">
          <%= simple_format @post.body %>
        </div>
      </div>
      <div class="member">
        Posted by: 
        <% if member_signed_in? %>
          <%= @post.member.name %>
        <% else %>
          Anonymous
        <% end %>
      </div>
    </div>
    <nav class="level">
      <div class="level-left is-mobile">
        <div class="level-item">
          <%= link_to posts_path do %>
            <button class="button is-primary is-outlined">
              All Posts
            </button>
          <% end %>
        </div>
        <% if current_member == @post.member %>
          <%= link_to edit_post_path(@post), class: "level-item" do %>
            <span class="icon">
              <i class="fa fa-pencil" area-hidden="true"></i>
            </span>
          <% end %>
          <%= link_to post_path(@post), method: :delete, data: { confirm: "Are you sure?" }, class: "level-item" do %>
            <span class="icon">
              <i class="fa fa-trash"></i>
            </span>
          <% end %>
          <% end %>

      </div>
    </nav>

  </div>
</div>
