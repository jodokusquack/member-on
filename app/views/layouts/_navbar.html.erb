<nav class="navbar is-info">
  <div class="navbar-brand">
    <%= link_to root_path, class: 'navbar-item' do %>
      <h1 class="title is-5">Members Only</h1>
    <% end %>
  </div>

  <div class="navbar-menu">
    <div class="navbar-end">
      <div class="navbar-item">
        <div class="field is-grouped">
          <p class="control">
            <%= link_to "New Post", new_post_path, class: "button is-info is-inverted" %>
          </p>
          <% if member_signed_in? %>
            <p class="control">
              <%= link_to current_member.username, edit_member_registration_path, class: 'button is-info' %>
            </p>
            <p class="control">
              <%= link_to "Sign Out", destroy_member_session_path, method: :delete, class: 'button is-info' %>
            </p>
          <% else %>
            <p class="control">
              <%= link_to 'Sign In', new_member_session_path, class: 'button is-info' %> 
            </p>
            <p class="control">
              <%= link_to 'Sign Up', new_member_registration_path, class: 'button is-info' %> 
            </p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</nav>
